<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:clickable="false">

    <!-- TOP_BOTTOM mode -->
    <com.example.musicvibrationapp.view.AudioSpectrumView
        android:id="@+id/audioSpectrumViewTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.8"
        app:reverseDirection="true"
        app:barWidth="4dp"
        app:barSpacing="2dp"
        app:barColor="@android:color/white"/>

    <!-- BOTTOM_TOP mode -->
    <com.example.musicvibrationapp.view.AudioSpectrumView
        android:id="@+id/audioSpectrumViewBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.8"
        app:reverseDirection="false"
        app:barWidth="4dp"
        app:barSpacing="2dp"
        app:barColor="@android:color/white"/>

    <!-- LEFT_RIGHT mode -->
    <com.example.musicvibrationapp.view.AudioSpectrumView
        android:id="@+id/audioSpectrumViewLeft"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        app:reverseDirection="false"
        app:barWidth="4dp"
        app:barSpacing="2dp"
        app:barColor="@android:color/white"/>

    <!-- RIGHT_LEFT mode -->
    <com.example.musicvibrationapp.view.AudioSpectrumView
        android:id="@+id/audioSpectrumViewRight"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        app:reverseDirection="true"
        app:barWidth="4dp"
        app:barSpacing="2dp"
        app:barColor="@android:color/white"/>

</FrameLayout>